<isl:application 
	xmlns:isl="http://www.mezzonomy.com/interface-stylesheet-language"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:lyt="http://www.mezzonomy.com/layout"
	xmlns:int="http://www.mezzonomy.com/interface"
	xmlns:on="http://www.mezzonomy.com/events"
	xmlns:ins="http://www.mezzonomy.com/insiders"
	xmlns:dis="http://www.mezzonomy.com/distant">
	<isl:menus dis:href="cargo/Menus.xml"/>
	<isl:help>	
		<html:body lang="en" title="Checkbox">
			<html:h1>Nested box in LaTeX way</html:h1>
			<html:P>The <int:Boxed/> widget provides 
			an equivalent to the \boxed LaTeX tag.
			</html:P>
			<int:Interface/>
			<html:P>The <int:Boxed/> accepts no events.
			</html:P>
			<isl:xmlns/>
		</html:body>
	</isl:help>
	<xsl:stylesheet version="1.0">
		<xsl:import href="unitary/unitary.xsl"/>
	</xsl:stylesheet>
	<int:Interface>
		<int:Boxed lyt:position="central">
			<int:Boxed>
				<int:Boxed>
					<int:Label text="1"/>
					<int:Label text="2"/>
				</int:Boxed>
				<int:Label text="3"/>
			</int:Boxed>
			<int:Boxed>
				<int:Boxed>
					<int:Label text="4"/>
				</int:Boxed>
			<int:Label text="5"/>
			</int:Boxed>
		</int:Boxed>
	</int:Interface>
</isl:application>
